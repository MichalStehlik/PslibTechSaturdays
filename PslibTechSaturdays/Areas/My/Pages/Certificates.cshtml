@page
@model PslibTechSaturdays.Areas.My.Pages.CertificatesModel

@{
    ViewData["Title"] = "Moje certifikáty";
}

<h1>Moje certifikáty</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Certificates[0].Issued)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Certificates[0].Title)
            </th>
            <th>Akce</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Certificates.Count() > 0)
        {
            @foreach (var item in Model.Certificates)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Issued)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        <a asp-page-handler="Download" asp-route-id="@item.CertificateId">Stáhnout</a> |
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="100" class="table-info">Zatím žádné certifikáty nemáte.</td>
            </tr>
        }
    </tbody>
</table>
