@page
@model CreateModel

@{
    ViewData["Title"] = "Nový uživatel";
}

<h1>Vytvoření</h1>

<h2>Nový uživatel</h2>
<hr />
<div class="row">
    <div class="col">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.FirstName" class="control-label"></label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.LastName" class="control-label"></label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.BirthDate" class="control-label"></label>
                <input asp-for="Input.BirthDate" class="form-control" />
                <span asp-validation-for="Input.BirthDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.SchoolName" class="control-label"></label>
                <input asp-for="Input.SchoolName" class="form-control" />
                <span asp-validation-for="Input.SchoolName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="Input.Grade">Ročník</label>
                <select class="form-control"
                        asp-for="Input.Grade"
                        asp-items="@Html.GetEnumSelectList<SchoolGrade>()">
                </select>
                <span asp-validation-for="Input.Grade" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Input.MailList" /> @Html.DisplayNameFor(model => model.Input.MailList)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Input.Aspirant" /> @Html.DisplayNameFor(model => model.Input.Aspirant)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email" class="control-label"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password" class="control-label"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Input.Administrator" /> @Html.DisplayNameFor(model => model.Input.Administrator)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Input.Lector" /> @Html.DisplayNameFor(model => model.Input.Lector)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Vytvořit" class="btn btn-primary" /> <a asp-page="Index" class="btn btn-secondary">Zpět na seznam</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
