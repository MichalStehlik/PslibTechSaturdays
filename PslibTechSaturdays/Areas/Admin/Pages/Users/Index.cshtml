@page
@model IndexModel

@{
    ViewData["Title"] = "Uživatelé";
}

<h1>Seznam uživatelů</h1>

<p>
    <a asp-page="Create">Nový</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-order="@(Model.Sort == UsersOrder.FirstName ? UsersOrder.FirstNameDesc : UsersOrder.FirstName)">
                    @Html.DisplayNameFor(model => model.Users[0].FirstName)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-order="@(Model.Sort == UsersOrder.LastName ? UsersOrder.LastNameDesc : UsersOrder.LastName)">
                    @Html.DisplayNameFor(model => model.Users[0].LastName)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].SchoolName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].Grade)
            </th>
            <th>
                <a asp-page="./Index" asp-route-order="@(Model.Sort == UsersOrder.Created ? UsersOrder.CreatedDesc : UsersOrder.Created)">
                    @Html.DisplayNameFor(model => model.Users[0].Created)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-order="@(Model.Sort == UsersOrder.Email ? UsersOrder.EmailDesc : UsersOrder.Email)">
                    @Html.DisplayNameFor(model => model.Users[0].Email)
                </a>
            </th>
            <th>
                <a asp-page="./Index" asp-route-order="@(Model.Sort == UsersOrder.Enrollments ? UsersOrder.EnrollmentsDesc : UsersOrder.Enrollments)">
                    @Html.DisplayNameFor(model => model.Users[0].EnrollmentsCount)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Users[0].CertificatesCount)
            </th>
            <th>Administrátor</th>
            <th>Lektor</th>
            <th>Akce</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Users) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SchoolName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created)
            </td>
            <td>
                    <a href="mailto:@Html.DisplayFor(modelItem => item.Email)">@Html.DisplayFor(modelItem => item.Email)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EnrollmentsCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CertificatesCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Admin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lector)
            </td>
            <td>
                <div class="btn-group">
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Detail</a>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Editace</a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Smazání</a>
                </div>
            </td>
        </tr>
}
    </tbody>
    @{
        var prevDisabled = !Model.Users.HasPreviousPage ? "disabled" : "";
        var nextDisabled = !Model.Users.HasNextPage ? "disabled" : "";
    }
    <tfoot>
        <tr>
            <td colspan="1000">
                <a asp-page="./Index"
                   asp-route-sortOrder="@Model.Sort"
                   asp-route-pageIndex="@(Model.Users.PageIndex - 1)"
                   class="btn btn-primary @prevDisabled">
                    Previous
                </a>
                <a asp-page="./Index"
                   asp-route-sortOrder="@Model.Sort"
                   asp-route-pageIndex="@(Model.Users.PageIndex + 1)"
                   class="btn btn-primary @nextDisabled">
                    Next
                </a>
            </td>
        </tr>
    </tfoot>
</table>
