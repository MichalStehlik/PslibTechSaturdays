@page
@using Microsoft.AspNetCore.Identity
@using PslibTechSaturdays.Models;
@model PslibTechSaturdays.Pages.ActionModel
@inject SignInManager<ApplicationUser> SignInManager
@{
    ViewData["Title"] = "Akce";
}
<section>
    <h1>@Model.Action.Name</h1>
    <div>
        @Html.Raw(Model.Action.Description)
    </div>
    <p>Trvání: <strong>@Model.Action.Start - @Model.Action.End</strong></p>
    @if(Model.Action.ExclusiveEnrollment)
    {
        <div class="alert alert-info">V této akci se lze zapsat jen do jedné skupiny.</div>
    }
</section>
<h2>Skupiny</h2>
@if (Model.Groups.Count() > 0) {
    <div class="row row-cols-1 row-cols-lg-2 g-4">
        @foreach(var group in Model.Groups)
        {
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <h3 class="card-title">@group.Name</h3>
                        @Html.Raw(group.Description)
                    </div>
                    <ul class="list-group list-group-flush">
                        @{
                            int valid = group.EnrollmentsCountVisible ? group.Enrollments!.Count() : 0;
                            int capacity = Math.Max(group.Capacity, group.Enrollments!.Count());
                        }
                        <li class="list-group-item">
                            <div class="row align-items-center">
                                <div class="col">
                                    Kapacita: <strong>@(valid)</strong>/<strong>@(capacity)</strong>
                                </div>
                                <div class="col">
                                    <div class="progress">
                                        <div class="progress-bar" role="progressbar" style="width: @(valid/capacity)" aria-valuenow="@valid" aria-valuemin="0" aria-valuemax="@capacity"></div>
                                    </div>
                                </div>
                            </div>
                        </li>
                        <li class="list-group-item">Minimální ročník: <strong>@group.MinGrade</strong></li>
                    </ul>
                    <footer class="card-footer">
                        <button class="btn btn-secondary">Detail</button>
                        @if (SignInManager.IsSignedIn(User))
                        {
                            @if (group.OpenedAt != null && group.ClosedAt == null)
                            {
                                <button class="btn btn-secondary btn-success">Přihlásit se</button>
                            }
                        }         
                    </footer>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>Tato akce neobsahuje žádné skupiny.</p>
}